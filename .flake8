[flake8]
max-line-length = 127
max-complexity = 15

# Ignore these globally:
# E402: module level import not at top of file (required for gi.require_version)
# W293: blank line contains whitespace (cosmetic, fix later)
# W291: trailing whitespace (cosmetic)
extend-ignore = E402, W293, W291

# Exclude non-source files
exclude =
    .git,
    __pycache__,
    assets/,
    docs/,
    scripts/,
    .github/,
    venv/
